  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/node": "^10.0.4",
    "gts": "^0.5.4",
    "jest": "^22.4.3",
    "ts-jest": "^22.4.5",
    "typescript": "~2.6.1"
  },
  "scripts": {
    "test": "jest",
    "check": "gts check",
